    <style>
        * {
            margin: 0;
            padding: 0;

        }

        body {
            background: linear-gradient(#2b5876,#4e4376);
          height: 100vh;
        }

        .box {
             
            width: 25rem;
            height: 37rem;
            background-color:rgba(77, 9, 139, 0.4);
            position: relative;
            overflow: hidden;
          
            border-radius: 15px;
            transform: translate3d(0, 0, 0);
            box-shadow: 0 0.4rem 1.5rem rgba(0, 0, 0, 0.9);
        }

        .wave-1 {
            opacity: 0.4;
            width: 50rem;
            height: 50rem;
            position: absolute;
            top: 43%;
            left: 0%;
            margin-left: -45%;
            border-radius: 43%;
            background-color: white;
            animation: drift 3000ms infinite linear;
            z-index: 1;
        }

        .wave-2 {
            opacity: 0.3;
            width: 50rem;
            height: 50rem;
            position: absolute;
            top: 39%;
            left: 0%;
            margin-left: -45%;
            border-radius: 43%;
            background-color: white;
            animation: drift 5000ms infinite linear;
            z-index: 1;
        }

        .wave-3 {
            opacity: 0.2;
            width: 50rem;
            height: 50rem;
            position: absolute;
            top: 37%;
            left: 0%;
            margin-left: -45%;
            border-radius: 43%;
            background-color: white;
            animation: drift 7000ms infinite linear;
            z-index: 3;
        }

        @keyframes drift {
            from {
                transform: rotate(0deg);
            }

            from {
                transform: rotate(360deg);
            }
        }

        .info {
            position: absolute;
            width: 100%;
            height: 45%;
            bottom: 0;
            z-index: 5;
            text-align: center;
        }

        .info .location {
            margin-top: 20px;
            font-weight: 700;
            font-size: 40px;
            margin-bottom: 15px;
        }

        .fa-street-view {
            animation: street 2s linear infinite alternate;

        }

        @keyframes street {
            from {
                transform: translateX(-0.4rem);
            }

            to {
                transform: translateX(0.5rem);
            }
        }

        #date {
            font-size: 20px;
            font-weight: 400;
            margin-bottom: 10px;
        }

        .temp {
            margin-bottom: 10px;
        }

        #icon {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 35%;
            font-size: 60px;
            animation: iicon 1.5s linear infinite alternate;
        }

        @keyframes iicon {
            from {
                transform: scale(0.8);
            }

            to {
                transform: scale(1.8);
            }
        }
        @media screen and (max-width: 500px){
            .box {
           
            width: 15rem;
            height: 27rem;
            background-color: #89cbdb;
            /* position: relative; */
           
        }
        .info .location {
            
            font-size: 20px;
            margin-bottom: 15px;
        }
        }
    </style>
</head>

<body>
   <div class="container d-flex justify-content-center mt-2 ">
       <div class="row">
           <div class="col-12">
            <div class="box">
                <div class="wave-1"></div>
                <div class="wave-2"></div>
                <div class="wave-3"></div>
                <div id="icon">
                   
                    <i class="fas fa-sun" style="color: orange;"></i>
                </div>
                <div class="info">
                    <h2 class="location"><i class="fa fa-street-view"></i> {{location}},<sub
                            style="font-size: 20px;">{{country}}</sub></h2>
                    <p id="date">
        
                    </p>
                    <h1 class="temp">{{temperature}}&deg;C</h1>
                    <h3 class="min">Min {{tempmin}}&deg;C | Max {{tempmax}}&deg;C</h3>
                </div>
            </div>
           </div>
       </div>
   </div>
